{
    "version": "3.0.0",
    "buildOptions": {
        "additionalArguments": [ "--standalone" ],
        "compilerName": "fsc",
        "compile": {
            "includeFiles": [
                "FsSrGen.fs"
            ]
        }
    },

    "packOptions": {
        "files": {
            "mappings": {
                "content/": "FSharp.SRGen.targets"
            }
        }
    },

    "dependencies": {
        "FSharp.Core": "4.0.0.1"
    },

    "frameworks": {
        "net46" : { 
            "frameworkAssemblies": {
                "Microsoft.Build.Framework": "",
                "Microsoft.Build.Utilities.v4.0": ""
            }
        }
    },

    "tools": {
        "dotnet-compile-fsc": {
            "version": "1.0.0-preview1-*",
            "imports": [
                "dnxcore50",
                "portable-net45+win81",
                "netstandard1.3"
            ]
        }
    }
    
}
